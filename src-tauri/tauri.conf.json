{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "taskyon",
  "version": "0.1.0",
  "identifier": "space.taskyon.app",
  "build": {
    "frontendDist": "../dist/spa",
    "devUrl": "http://localhost:9000",
    "beforeDevCommand": "quasar dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "taskyon",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
